<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory 
        android:title="Silence Hours"
        android:key="pref_key_silence">\
        
        <CheckBoxPreference
            android:key="enable_silence_hours"
            android:summary="Select quiet time to not receive any notifications"
            android:title="Enable Silence Hours"
            android:defaultValue="false"  />
	    
	    <!--  ListPreference
	        android:dependency="pref_sync"
	        android:key="pref_syncConnectionType"
	        android:title="string/pref_syncConnectionType"
	        android:dialogTitle="string/pref_syncConnectionType"
	        android:entries="@array/pref_syncConnectionTypes_entries"
	        android:entryValues="@array/pref_syncConnectionTypes_values"
	        android:defaultValue="@string/pref_syncConnectionTypes_default" / -->
	    

        <EditTextPreference android:key="silence_from"
            android:dependency="enable_silence_hours"
            android:summary=""
            android:title="Silence from"
            android:defaultValue="21:00"  />
        
        <EditTextPreference android:key="silence_to"
            android:dependency="enable_silence_hours"
            android:summary=""
            android:title="Silence to"
            android:defaultValue="05:30"  />
        
    </PreferenceCategory>

     <PreferenceCategory 
        android:title="Notification"
        android:key="pref_key_notification">\
        

        <EditTextPreference android:key="vibration_pattern"
            android:summary=""
            android:title="Vibration pattern"
            android:defaultValue="0,80,30,80,30,80,30,80,30,80,30,80,30,80,150,900"  />
        
        <RingtonePreference android:key="ringtone"
            android:summary=""
            android:title="Notification tone"/>
        
    </PreferenceCategory>
    
    
</PreferenceScreen>