<?xml version="1.0" encoding="utf-8"?>
    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_list_item"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >
    <ImageView
        android:id="@+id/editIcon"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:src="@drawable/ic_launcher" />
    
    <ToggleButton
        android:id="@+id/toggleButtonShowApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:text="@string/hide_btn"
        android:textOff="@string/hide_hide"
        android:textOn="@string/hide_show"
        android:textSize="16sp" >

        <requestFocus/>
    </ToggleButton>
    
    <!-- CheckBox>
        android:id="@+id/checkBoxEnableForApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:text="" 
        android:textSize="20sp" >
        <requestFocus/>
    </CheckBox -->
    
    <TextView
        android:id="@+id/textViewAppName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/toggleButtonShowApp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@id/toggleButtonShowApp"
        android:layout_toRightOf="@id/editIcon"
        android:gravity="center_vertical"
        android:text="Example application"
        android:textSize="16sp" />
    
</RelativeLayout>
 